<Window x:Class="IronXHelper.FullScreenImage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IronXHelper"
        mc:Ignorable="d"
        Title="Full Screen WPF"
        WindowState="Maximized"
        WindowStyle="None"
        Height="450" Width="800"
        Background="Transparent" KeyDown="ImageToShow_KeyDown">
    <Grid Background="Transparent" MouseUp="Grid_MouseUp">
        <Image x:Name="ImageToShow" Stretch="Uniform" Cursor="Hand"/>
    </Grid>
</Window>

<Window x:Class="SysAdminApp.AskNames"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SysAdminApp"
        mc:Ignorable="d"
        Title="AskNames" MinHeight="120" MinWidth="400"
        MaxHeight="250" MaxWidth="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <TextBlock TextWrapping="Wrap" Grid.Column="0" HorizontalAlignment="Right" Text="Версия помощника: "/>
            <TextBox x:Name="HelperVer" Grid.Column="1" HorizontalAlignment="Stretch" Height="40"/>
        </Grid>
        <StackPanel Grid.Row="1">
            <Button Content="Подтвердить" IsDefault="True" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
